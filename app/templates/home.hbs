<div class="kc-left-menu col-md-2 col-sm-2">
	<div class="nav">	
		<div class="app-description">{{model.description}}</div>
	</div>
</div>
<div class="kc-content col-md-10 col-sm-10">
	<div class="row">
		{{#each model.nav as |discipline|}}
			<div class="col-md-3 category hitarea" {{action "categorySelected" discipline on "click"}}>
				<div class="category-icon {{discipline.icon}}"></div>
				<div class="category-title spectra-text">{{discipline.label}}</div>
				<div class="category-description">{{discipline.description}}</div>
			</div>

		{{/each}}
	</div>
				
</div>

